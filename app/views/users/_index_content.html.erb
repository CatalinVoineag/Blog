<br><br>

<%= link_to 'New User', admin_user_new_path, class:'btn btn-primary' %>
<br><br>

<div class="table-responsive">
	<table class="table table-bordered table-hover">
	  <thead>
	  	<tr>
	  		<th>Name</th>
	  		<th>Email</th>
	  		<th>Admin</th>
	  	</tr>
	  </thead>
	  <tbody>
		  <% @users.each do |user| %>

		  	<tr class="active" onclick="document.location='<%= admin_user_edit_path(user) %>';">
		  		<td><%= user.name %></td>
		  		<td><%= user.email %></td>
		  		<td><%= user.admin %>
		  			<% unless current_user == user %>
		  				<%= link_to 'Delete', admin_user_destroy_path(user), method: :delete, class: 'btn btn-danger btn-xs pull-right' %>
		  			<% end %>
		  		</td>
		  	</tr>

		  <% end %>
		</tbody>
	</table>
</div>